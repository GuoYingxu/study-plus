{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "store:default",
    "fs:allow-exists",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPLOCALDATA/**"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [
        {
          "path": "$APPLOCALDATA/**"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    "upload:default",
    "upload:allow-download",
    "shell:allow-execute",
    "shell:allow-spawn",
    {
      "identifier": "fs:default",
      "allow": [
        {
          "path": "$APPLOCALDATA/*"
        },
        {
          "path": "$APPDATA/*"
        },
        {
          "path": "$DOCUMENT/*"
        }
      ]
    }
  ]
}
