{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "study-plus",
  "version": "0.1.24",
  "identifier": "com.eduplus.study.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "study+",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "publisher": "EduPlus Inc.",
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "permissions": [
      {
        "identifier": "upload:allow-download",
        "allow": true
      },
      {
        "identifier": "fs:allow-exists",
        "allow": [
          {
            "path": ["*", "$APPLOCALDATA/*", "$DESKTOP/*", "$DOCUMENT/*"]
          }
        ]
      },
      {
        "identifier": "fs:allow-read",
        "allow": true
      },
      {
        "identifier": "fs:allow-write",
        "allow": true
      },
      {
        "identifier": "shell:allow-execute",
        "allow": [
          {
            "name": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
            "args": ["Expand-Archive", "-Path", "-DestinationPath", "-Force"]
          }
        ]
      },
      {
        "identifier": "shell:allow-spawn",
        "allow": [
          {
            "path": ["*", "$APPLOCALDATA/**", "$DESKTOP/**", "$DOCUMENT/**"]
          }
        ]
      },
      {
        "identifier": "upload:default",
        "allow": true
      },
      {
        "identifier": "shell:default",
        "allow": [
          {
            "path": ["*", "$APPLOCALDATA/**", "$DESKTOP/**", "$DOCUMENT/**"]
          }
        ]
      }
    ],
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDc0MkU0QzVGQUZGRUEwQgpSV1FMNnYvNnhlUkNCMFROaWZmNk5lNGVCZGYvM2VJWlpIcEZxWmhYaS94R3NWdjlQMytOdHU2TAo=",
      "dialog": {
        "updateTitle": "发现新版本",
        "updateMessage": "发现新版本 {{version}}",
        "noUpdateMessage": "当前已经是最新版本"
      },
      "endpoints": [
        "https://github.com/guoyingxu/study-plus/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    },
    "process": {
      "all": true
    }
  }
}
